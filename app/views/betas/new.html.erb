<div class="background-block">
  <div class="container">
    <h3 class="text-center">Welcome to the Game Roster Beta!</h3>
    <section class="">
      <div class="">
        <div class="row">
          <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 text-center">
            <%= image_tag("game_roster_1.png", style: "width: 70%", class: 'wow flip')  %>
          </div>
        </div>
      </div>
    </section>
    <div class="well clearfix">
      <%= form_tag betas_path, :method => :post do %>
      <div class="col-md-6 col-md-offset-3">
        <div class="form-group">
          <%= label_tag :password %>
          <%= password_field_tag :password, nil, class: 'form-control', :placeholder=>"Password" %>
        </div>
        <div class="form-group">
          <%= submit_tag 'Submit', class: 'btn btn-primary col-md-4 col-md-offset-4 col-xs-12' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>