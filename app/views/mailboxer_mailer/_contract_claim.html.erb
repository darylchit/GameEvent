<b>

<%= link_to "View All Details", posted_contract_path(resource) %>

<p><%= resource.seller.username %> Claimed Your Event</p>
<div class="well">
	<div class="row">
		<div class="col-md-5">
			<ul class="mss-list clearfix">
				<li class="mss">
					<a href="mercenary-details.php"><%= image_tag resource.buyer.avatar_url %> </a>
					<div class="mss-details">
						<a href="mercenary-details.php">
							<h4><%= resource.buyer.username %></h4>
						</a>
						<strong>PSA: </strong>
						<span class="psa-rating-read-only" data-score="<%=  resource.buyer.psa_rating %>"></span>
						<br />
						<strong>Experience: </strong><%= resource.buyer.posted_contracts.count  + resource.buyer.claimed_contracts.count %>
					</div>
				</li>
			</ul>
		</div>
		<div class="col-md-7">
			<div>
				<h4>Event #<%= resource.id %></h4>
				<ul class="list-unstyled contract-meta">

					<li class="contract-clock">Event Posted:
						<br><%= resource.created_at.strftime("%Y/%m/%d %I:%M%p") %>
					</li>
				</ul>
				<div>
					<ul class="list-unstyled contract-meta">
						<li class="contract-game"><%= resource.selected_game_game_system_join.game.title %>&mdash; <%= resource.selected_game_game_system_join.game_system.title %>
							<%= image_tag resource.selected_game_game_system_join.game.game_cover, :class => "notification-game-cover" %>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
<% if false #resource.status == 'Pending Claim Confirmation'  %>
	<div class="row">
		<div class="col-md-6">
			<%= link_to 'Deny', posted_contract_deny_path(resource, :conversation_id => @conversation.id), :method => 'patch', :class=> 'btn btn-danger btn-block' %>
		</div>
		<div class="col-md-6">
			<%= link_to 'Confirm', posted_contract_claim_path(resource, :conversation_id => @conversation.id), :method => 'patch', :class=> 'btn btn-primary btn-block' %>
		</div>
	</div>
<% end %>
