<div class="row chat-message">
  <div class="col-xs-2 col-sm-1 sender-image">
    <a href="<%= profiles_path() + '/' + clan_message.sender.username %>"><%= image_tag clan_message.sender.avatar_url, :class=>'avatar-sm' %></a>
  </div>
  <div class="col-xs-10 col-sm-11 message">
    <div class='title'><b><%= clan_message.sender.username%> </b><small> <%=clan_message.created_at.strftime("%b-%d | %l:%M%p") %></small> </div>
    <div class="text"> <%=clan_message.subject%></div>
  </div>
</div>
<%if false %>
<li class="message message-self">
  <div class ='message-container'>
    <div class="hidden-xs">
      <span class="message-avatar message-self reduce_size">
          <a href="<%= profiles_path() + '/' + clan_message.sender.username %>"><%= image_tag clan_message.sender.avatar_url, :class=>'avatar-sm'%></a>
      </span>
      <div class="message-content set_width_chat">
        <h5 class="set_chat_text">
          <span class="text-primary">
            <%= clan_message.sender.username%>:
            <span class="font_color_white helper-text">
              <%=clan_message.subject%>
            </span>
          </span>
          <span class="visible-sm-block visible-xs-block visible-md visible-lg pull-right-md">
            <small>
              <span class="hidden-xs">&nbsp;</span>

            </small>
          </span>
        </h5>
        <div class="message-body left-rect">
        </div>
      </div>
    </div>
    <div class="visible-xs">
      <div class="message-content set_width_chat mobile_chat">
        <span class="mobile-chat-date">
          <%=clan_message.created_at.strftime("%m/%d %I:%M%p %Z ") %>&nbsp;
        </span>
        <h5 class="set_chat_text">
          <span class="text-primary">
            <%= clan_message.sender.username%>:
            <span class="font_color_white helper-text">
              <%=clan_message.subject%>
            </span>
          </span>
          <span class="visible-sm-block visible-xs-block visible-md visible-lg pull-right-md">
            <small>
              <span class="hidden-xs"><%=clan_message.created_at.strftime("%m/%d %I:%M%p %Z ") %>&nbsp;</span>

            </small>

          </span>
        </h5>
      </div>
    </div>
  </div>

</li>
<% end%>
