<% if @notification_controller %>
	$('.clan_application_action').html("<%= escape_javascript(render partial: 'application', locals: {clan_application: @clan_application} )%>");
<% else %>
	<%if @total_pending < 1%>
		$('#clan_applications').html("<%= j render(:partial => 'no_pending_application')%>");
		$('.pending_application_mobile').html("<%= j render(:partial => 'no_pending_application')%>");
	<% else%>
		$(".app-" + '<%=@clan_application_id%>' ).remove();
		$("#view_application_" + "<%=@clan_application_id%>" ).remove();
		toastr.options = {
		    "closeButton": true,
		    "timeOut": "7000",
		    "extendedTimeOut": "0",
				"positionClass": "toast-top-center"
		};
		toastr.success('Application Submitted');
	<% end %>
	$('.clan_application_action').html("<%= escape_javascript(render partial: 'application', locals: {clan_application: @clan_application} )%>");
<% end %>
$('.modal-backdrop').hide();
