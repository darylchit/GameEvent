<li class="wow fadeIn set_tabs_padding clan_li_set_color_size" data-wow-delay="0.2s"> 
  <%= form_for [@clan, ClanMember.new], remote: true do |f| %>
    <%= f.hidden_field(:user_id, :value => current_user.id) %>
    <%= f.hidden_field(:clan_id, :value => @clan.id) %>
    <%= f.hidden_field(:invite_id, :value => current_user.id) %>
    <%= button_tag(type: 'submit', class: "set_clan_btn_style", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Joining..."}) do %>
      <i class="fa fa-plus-circle set_icon_size" aria-hidden="true"></i>
      <span class="btn-span">Join Clan</span>
    <% end %>
  <% end %>
</li>