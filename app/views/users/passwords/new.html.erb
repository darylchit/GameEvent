<div class="background-block content-area">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
				<div class="devise-block">
					<h1 class="text-center">Forgot Password</h1>
					<%= bootstrap_form_for(resource, as: resource_name, url: user_password_path(resource), html: { method: :post }) do |f| %>
					  <%= f.error_summary %>

					  <%= f.text_field :email, autofocus: true %>
						<div class="form group text-center-md">
							<%= f.submit "Send Instructions", class: "btn btn-primary btn-x" %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
