<div class="background-block content-area">
	<div class="container">
		<div class="row">
		    <div class="col-md-10 col-md-offset-1">
                        <% if resource.status == 'Cancelled' %>
                            <%= render 'shared/cancelled', event: resource, new_path: contracts_path %>
                        <% end %>

				<p id="notice"><%= notice %></p>
				<div class="row">
					<div class="col-md-8 col-sm-6">
						<h3 class="mt0">Event Details</h3>
					</div>
					<div class="col-md-4 col-sm-6 text-right-md">
						<div class="sharing-buttons">
							<a href="https://twitter.com/intent/tweet/?text=&url=<%= URI.escape (event_url resource.id.to_s) %>&via=GameRoster" class="btn btn-twitter btn-sharing">
								<span class="fa fa-twitter"></span>
							</a> 
							<a href="#" class="btn btn-facebook btn-sharing" data-event-id="<%= resource.id %>">
								<span class="fa fa-facebook"></span>
							</a>
						</div>
					</div>
				</div>
				<div class="container-box contract-details contract-body">
					<div class="row">
	                    <div class="col-md-6">
							<h1 class="mt0"><%= link_to resource.seller.username, profiles_path() + '/' + resource.seller.username %></h1>
	                    </div>
	                    <div class="col-md-6 text-right-md">
	                        <small>Event #</small>
	                        <h5 class="mt0"><%= resource.id %></h5>
	                    </div>
	                </div>
					<%= render "contract_details" %>
				</div>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">

$(document).ready(function() {
	$('[data-toggle="tooltip"]').tooltip();

	if ($('.game-item input[type="radio"]').length < 2) {
		$('.game-item input[type="radio"]').parent().parent().parent().addClass('selected');
		$('.game-item input[type="radio"]').prop('checked',true);
		$('input[type="submit"]').removeClass('disabled').tooltip('destroy');
	}

	$('.game-item input[type="radio"]').on('change', function() {
		$(this).parent().parent().parent().parent().children('li').removeClass('selected');
		$(this).parent().parent().parent().addClass('selected');
		$('input[type="submit"]').removeClass('disabled').tooltip('destroy');
	});
})



</script>
