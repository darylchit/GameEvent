<div class="background-block content-area">
	<div class="container">
		<div class="row">
			<div class="col-md-3">
				<%= render "layouts/adminnav" %>
			</div>
			<div class ="col-md-8">
				<div class="devise-block">
					<h2 class="mt0"><%="Edit #{resource.username}'s Account"%></h2>
					<%= render 'layouts/flash' %>
					<%= form_for(resource, {url:"/admin/users/#{resource.id}"}) do |f| %>
						<% if resource.errors.any? %>
							<div id="error_explanation">
							  <ul>
							  <% resource.errors.full_messages.each do |message| %>
								<li><%= message %></li>
							  <% end %>
							  </ul>
							</div>
						 <% end %>

						<div class="form-group">
							<label>Username</label>
            				<%= f.text_field :username, class: 'form-control', wrapper: { data: { validation: 'required' } } %>

						</div>
						
						<div class="form-group">
							<label>Email Address</label>
            				<%= f.text_field :email, class: 'form-control', wrapper: { data: { validation: 'required' } } %>

						</div>
						
						<div class="row">
              <div class="col-md-6">
              	<div class="form-group">
									<label>Country or US Territory</label>
									<%= f.select :country, countries_list, {include_blank: true}, {:class => 'form-control chosen-select', :multiple => false} %>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label>Date of Birth</label>
									<%= f.text_field :date_of_birth, class: 'form-control date-picker' %>
								</div>
							</div>							
						</div>						
						
						
						<div class="form-group">
							<label>PayPal Email Address</label>
							<%= f.text_field :paypal_email, class: 'form-control' %>
						</div>

						<hr>

						<div class="form-group clearfix col-md-6 col-md-offset-3">
								<%= f.submit "Update", class: "btn btn-primary btn-full" %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>


<script type="text/javascript">
	$('#user_country').on('change', function() {
		console.log($(this).val());
		if ($(this).val() == "PR") {
			$('#pr-helper').fadeIn();
		}
	})
</script>
