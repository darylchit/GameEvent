<div class="background-block content-area">
	<div class="container">
		<div class="row">
			<div class="col-md-3">
				<%= render "layouts/adminnav" %>
			</div>
			<div class="col-md-9">
				<div class="row">
	                <div class="col-md-9">
	                    <h2 class="mt0">Manage Avatars</h2>
	                </div>
	                <div class="col-md-3">
										<%= link_to 'Add Avatar', new_admin_system_avatar_path(), class: "btn btn-primary pull-right-md" %>
	                </div>
	            </div>

				<p id="notice"><%= notice %></p>
				<div class="table-responsive">
					<%= grid(@grid, show_filters: :no, hide_csv_button: true, html: {class: 'table table-responsive admin-games table-striped data-tr'}) do |g|
						g.blank_slate do
							content_tag :div, 'There are no available avatars', class: 'no-results'
					  	end
					  	g.row_attributes do |g|
								{:datasrc => admin_system_avatar_path(g)}
						end
	g.column name: 'Avatar', attribute: 'name', :class => 'cover' do | g |
		image_tag g.name, class: 'avatar-sm'
						end
					end -%>
				</div>
			</div>
		</div>
	</div>
</div>