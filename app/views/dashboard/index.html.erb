              <% if @needs_rated %>
                  <%= link_to profiles_path + '/' + current_user.username + '/blocks-and-feedback' do %>
                      <div class="alert alert-warning text-center"><p class="lead">
                          Please <strong>rate</strong> the users you have completed events with.
                      </div>
                  <% end %>
