  <%= render 'dashboard/partials/games/games_block' %>

  <%#= render 'dashboard/partials/streaming_users' if @streaming_users %>

    <% if @streaming_users %>
      <section class="common_main mb0">
    	  <div class="container">
    	   <%= render 'dashboard/partials/now_playing' %>
        </div>
      </section>
    <% end %>
  <% end %>

</div>
