  <% unless @notices.empty? %>
      <section class="common_main mb0">
          <div class="container">
              <%= render 'dashboard/partials/notices', notices: @notices %>
          </div>
      </section>
  <% end %>

  <% if 5 == 4 # disabled %>
      <section class="common_main mb0">
          <div class="container">
              <div class="well clearfix mb0 mt0">
                  <%= render 'dashboard/partials/my_games' %>
              </div>
          </div>
      </section>
  <% end %>

