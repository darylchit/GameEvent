          <div class="container">
              <%= render 'dashboard/partials/clans', clans: @user_clans, header: 'My Clans', is_mine: true %>
          </div>
      </section>

      <section class="common_main mb0">
          <div class="container">
              <%= render 'dashboard/partials/clans', clans: @clans, header: 'Active Clans', is_mine: false %>
          </div>
      </section>
