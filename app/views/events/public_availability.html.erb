<div class="background-block content-area">
	<div class="container">
		<div class="row">
			<div class="col-md-10 col-md-offset-1">
				<p id="notice"><%= notice %></p>
				<div class="row">
					<div class="col-md-8 col-sm-6">
						<h3 class="mt0">Event Details</h3>
					</div>
					<div class="col-md-4 col-sm-6 text-right-md">
						<%  if resource.status == "Open" %>
							<div class="sharing-buttons">
								<a href="https://twitter.com/intent/tweet/?text=&url=<%= URI.escape (event_url @event.id.to_s) %>&via=GameRoster" class="btn btn-twitter btn-sharing">
									<span class="fa fa-twitter"></span>
								</a> 
								<a href="#" class="btn btn-facebook btn-sharing" data-event-id="<%= @event.id %>">
									<span class="fa fa-facebook"></span>
								</a>
							</div>
						<% end %>
					</div>
				</div>
				<%= render 'contract_info' %>
				<br>
				<% if @event.status == "Open" && @event.start_date_time < Time.now %>
					<div class="row">
						<div class="col-md-6 col-md-offset-3">
							<%= link_to 'Claim', contract_path(@event.id), class: 'btn btn-success btn-lg btn-block' %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
