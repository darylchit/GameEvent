<div class="modal fade" id="remove_profile" tabindex="-1" role="dialog" aria-labelledby="myUserLabel" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog" role="document">
    <div class="modal-content modal-medium">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" type="button" aria-label="Close"><span aria-hidden="true" class="action_popup" id="">&times;</span></button>
        <h4 class="modal-title text-center" id="myModalLabel"><b>Delete Profile</b></h4>
      </div>
      <div class="modal-body contract-details build_player_profile">
        <div class="form-group">
          <p class=" text-center">Type DELETE below to delete your profile.</p>
           <%= form_tag delete_profile_path, method: 'delete', remote: true do%>
              <div class="form-group">
                <%= text_field_tag 'confirmation', nil, class: 'form-control' %>
              </div>

            <%= button_tag 'Submit', class: 'btn btn-primary btn-full', data: {disable_with: "Delete <i class='fa fa-spinner fa-spin'></i>"} %>
           <% end %>
        </div>
      </div>

    </div>
  </div>
</div>

